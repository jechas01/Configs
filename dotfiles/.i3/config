bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# I prefer this one
bindsym $mod+Shift+Escape exec i3-msg exit

# resize window (you can also use the mouse for that)

# I wish this worked a bit differently. I always seem to go the wrong way for 
# windows on the right and on the bottom.
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
		tray_output primary
        status_command ~/.i3/conky
		position top
}

bindsym $mod+Shift+F12 move scratchpad
bindsym $mod+F12 scratchpad show

# starting a specially named term automatically 
exec --no-startup-id urxvt -name scratchpad -e /usr/bin/nano
# move this to scratchpad, if active
for_window [class="URxvt" instance="scratchpad"] move scratchpad

bindsym $mod+i exec "~/.i3/weechat_launch.sh"

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
	    bindsym l exec --no-startup-id ~/.scripts/i3exit.sh lock, mode "default"
	    bindsym e exec --no-startup-id ~/.scripts/i3exit.sh logout, mode "default"
	    bindsym s exec --no-startup-id ~/.scripts/i3exit.sh suspend, mode "default"
	    bindsym h exec --no-startup-id ~/.scripts/i3exit.sh hibernate, mode "default"
	    bindsym r exec --no-startup-id ~/.scripts/i3exit.sh reboot, mode "default"
	    bindsym Shift+s exec --no-startup-id ~/.scripts/i3exit.sh shutdown, mode "default"  
        #back to normal: Enter or Escape
		bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

